<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="170dp"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00FFFFFF"


    >

    <androidx.cardview.widget.CardView
        android:layout_width="252dp"
        android:layout_height="129dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            >

            <ImageView
                android:id="@+id/imv_location"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/black"></ImageView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                >

                <TextView
                    android:id="@+id/tv_location_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:text="Hilton New York Downtown"
                    android:fontFamily="@font/poppins"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#1E2022"
                    android:maxLines="2"
                    android:ellipsize="end"
                    ></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:text="Research Centre"
                    android:fontFamily="@font/poppins"
                    android:textSize="12sp"
                    android:textColor="#77838F"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:layout_below="@id/tv_location_name"
                    ></TextView>



                <androidx.appcompat.widget.AppCompatButton
                    android:layout_height="30dp"
                    android:layout_width="wrap_content"
                    android:text="Directions"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins"
                    android:background="@drawable/round_button_bg"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentBottom="true"
                    ></androidx.appcompat.widget.AppCompatButton>


            </RelativeLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>