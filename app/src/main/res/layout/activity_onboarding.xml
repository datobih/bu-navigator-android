<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.OnboardingActivity">


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_onboarding"
        android:layout_width="match_parent"
        android:layout_height="560dp"
        app:layout_constraintTop_toTopOf="parent"
        ></androidx.viewpager2.widget.ViewPager2>

    <LinearLayout
        android:id="@+id/ll_dot_indicator"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="26dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/vp_onboarding"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >


        <androidx.cardview.widget.CardView
            android:id="@+id/dot_indicator1"
            android:layout_width="15dp"
            android:layout_height="15dp"

            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="@color/button_purp"

            ></androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/dot_indicator2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="#F6F6F6"
            android:layout_marginLeft="10dp"
            ></androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/dot_indicator3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="#F6F6F6"
            android:layout_marginLeft="10dp"
            ></androidx.cardview.widget.CardView>


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_get_started"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button_purp"
        android:elevation="10dp"
        android:text="Get Started"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins"
        android:textAllCaps="false"
        android:shadowColor="#A1C3FC"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_dot_indicator"


        ></androidx.appcompat.widget.AppCompatButton>



</androidx.constraintlayout.widget.ConstraintLayout>